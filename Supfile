# Supfile
---
version: 0.5

networks:
  mac:
    hosts:
      - localhost

commands:
  switch-shell:
    run: chsh -s /bin/zsh

  install-homebrew-packages:
    run: brew bundle

  install-npm-packages:
    run: npm install -g npm-check-updates eslint

  install-pip-packages:
    run: pip install virtualenv pythonpy

  install-macos10.11-sdk:
    run: >
      curl -L https://github.com/phracker/MacOSX-SDKs/releases/download/10.13/MacOSX10.11.sdk.tar.xz -o ~/Downloads/MacOSX10.11.sdk.tar.xz && \
        tar xf ~/Downloads/MacOSX10.11.sdk.tar.xz && \
        sudo mv MacOSX10.11.sdk /Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/

targets:
  bootstrap:
    - switch-shell
    - install-homebrew-packages
    - install-npm-packages
    - install-pip-packages
    - install-macos10.11-sdk
