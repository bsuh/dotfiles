# Supfile
---
version: 0.5

networks:
  mac:
    hosts:
      - localhost

commands:
  install-homebrew:
    run: /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

  install-homebrew-packages:
    run: brew bundle

  install-npm-packages:
    run: npm install -g npm-check-updates eslint

  install-pip-packages:
    run: pip install virtualenv pythonpy

targets:
  bootstrap:
    - install-homebrew
    - install-homebrew-packages
    - install-npm-packages
    - install-pip-packages
